---
const { href, ariaLabel } = Astro.props;
---

<a
  class="rounded-md flex items-center justify-center border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-950 hover:bg-gray-100 dark:hover:bg-gray-800 hover:cursor-pointer transition-colors duration-200 h-10 w-10 min-w-[2.5rem] min-h-[2.5rem] text-base"
  href={href}
  target="_blank"
  aria-label={ariaLabel}
>
  <slot />
</a>
