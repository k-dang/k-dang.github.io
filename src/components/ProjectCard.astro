---
import { render, type CollectionEntry } from "astro:content";
import Badge from "@/components/Badge.astro";
import Button from "@/components/Button.astro";
interface Props {
  index: number;
  project: CollectionEntry<"projects">;
}

const { index, project } = Astro.props;
const { Content } = await render(project);

const patternUrls = [
  "/src/assets/random-shapes.svg",
  "/src/assets/kiwi.svg",
  "/src/assets/anchors-away.svg",
];
---

<div class="dark:bg-gray-700 rounded-lg overflow-hidden flex flex-col h-full border-1 dark:border-0">
  <div class=`h-40 bg-[url(${patternUrls[index]})] bg-repeat dark:bg-gray-200`></div>
  <div class="p-4 space-y-2 flex flex-col flex-grow">
    <h3 class="font-semibold dark:text-white">{project.data.title}</h3>
    <div class="text-sm text-gray-600 dark:text-gray-300">
      <Content />
    </div>
    <div class="flex flex-wrap gap-2">
      {project.data.tags?.map((tag) => <Badge variant="teal">{tag}</Badge>)}
    </div>
    <a href={project.data.githubUrl} target="_blank" class="mt-auto">
      <Button variant="gray" class="w-full dark:text-white text-sm">View on Github</Button>
    </a>
  </div>
</div>
